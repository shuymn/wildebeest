{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", "config:best-practices"],
	"labels": ["dependencies"],
	"lockFileMaintenance": {
		"enabled": true
	},
	"major": {
		"minimumReleaseAge": "5 days"
	},
	"minor": {
		"minimumReleaseAge": "3 days"
	},
	"patch": {
		"minimumReleaseAge": "2 days"
	},
	"packageRules": [
		{
			"matchUpdateTypes": ["patch", "pin"],
			"automerge": true
		},
		{
			"groupName": "linters",
			"extends": ["packages:linters"],
			"matchPackageNames": [
				"prettier",
				"/^@typescript-eslint//",
				"!eslint-plugin-qwik"
			]
		},
		{
			"groupName": "qwik",
			"matchPackageNames": ["eslint-plugin-qwik", "/^@builder.io/qwik/"]
		}
	]
}
