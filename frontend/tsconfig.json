{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "WebWorker",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "outDir": "tmp",
    "composite": true,
    "noEmit": false,
    "types": [
      "node",
      "vite/client",
      "@cloudflare/workers-types"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@wildebeest/backend/*": [
        "../backend/src/*"
      ],
      "@wildebeest/frontend/*": [
        "./src/*"
      ],
      "wildebeest/*": [
        "../*"
      ]
    }
  },
  "include": [
    "src",
    "mock-db",
    "adapters"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "server",
    "tmp"
  ],
  "references": [
    {
      "path": "../backend"
    }
  ]
}
