{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2022"],
		"module": "es2022",
		"moduleResolution": "bundler",
		"baseUrl": "./",
		"paths": {
			"@wildebeest/backend/*": ["./packages/backend/src/*"],
			"@wildebeest/frontend/*": ["./packages/frontend/src/*"]
		},
		"types": [
			"@cloudflare/workers-types",
			"vite/client",
			"vitest/globals",
			"vitest/importMeta",
			"@cloudflare/vitest-pool-workers"
		],
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"noEmit": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"references": [
		{ "path": "./packages/backend" },
		{ "path": "./packages/frontend" },
		{ "path": "./packages/consumer" },
		{ "path": "./packages/do" }
	],
	"exclude": ["node_modules", "./packages/frontend"],
	"include": ["./**/*.ts", "./packages/backend/src/routes/.well-known/*.ts"]
}
