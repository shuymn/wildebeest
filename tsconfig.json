{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2022"],
		"module": "es2022",
		"moduleResolution": "bundler",
		"baseUrl": "./",
		"paths": {
			"wildebeest/*": ["./*"]
		},
		"types": ["@cloudflare/workers-types", "jest", "vite/client"],
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"noEmit": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "./frontend", "./do", "./consumer"],
	"include": ["./**/*.ts", "./backend/src/routes/.well-known/*.ts"]
}
